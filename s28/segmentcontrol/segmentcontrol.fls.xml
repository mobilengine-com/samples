<?xml version="1.0" encoding="UTF-8"?>
<form xmlns="http://schemas.mobilengine.com/fls/v3" id="segctrl" menuName="segmentcontrol" platforms="ios">
	<declarations>
		<let id="data" shape="table" value='{table key, text (1, "one";2, "twenty-two";3, "three hundred and thirty-three")}' />
	</declarations>
	<dropdown id="dropdown" label="dropdown" choices='{select d.key, d.text from data d}' keyMap='{key}' textMap='{text}'/>
	<segmentcontrol id="segmentcontrol" label="segmentcontrol" choices='{select d.key, d.text from data d}' keyMap='{key}' textMap='{text}' selectedKey='{dropdown.selectedKey}' />
	<textview text='{segmentcontrol.selectedText}' />
	<segmentcontrol label="tintColor" choices='{select d.key, d.text from data d}' keyMap='{key}' textMap='{text}' style='{styles.tintColor}' />
	<segmentcontrol label="proportional" choices='{select d.key, d.text from data d}' keyMap='{key}' textMap='{text}' style='{styles.proportional}' />
	<segmentcontrol label="selectedSegment" choices='{select d.key, d.text from data d}' keyMap='{key}' textMap='{text}' style='{styles.selectedSegment}' />
</form>
  