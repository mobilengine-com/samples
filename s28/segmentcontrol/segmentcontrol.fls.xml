<?xml version="1.0" encoding="UTF-8"?>
<form xmlns="http://schemas.mobilengine.com/fls/v3" id="segctrl" menuName="segmentcontrol" menuOrder="10" platforms="ios" location="fine" style='{[sylDef]}'>
	<declarations>
		<let id="data" shape="table" value='{table key, text (1,"alma";2,"korte";3,"barack";4,"citrom";5,"banán";6,"narancs";7,"görögdinnye")}' />
		<let id="rgstyle" access="private" shape="table" value='{
			TABLE theme, syln, syl (
				"default", "def", null;
			
				"light", "def", styles.lightDef;

				"dark", "def", styles.darkDef;
				
				"moonlight", "def", styles.moonlightDef;
			)
		}'/>
		<let id='theme' access='private' shape='scalar' value='{ddTheme.selectedKey}'/>
		<let id='sylDef' access='private' shape='scalar' value='{select t.syl from rgstyle t where t.theme = theme and t.syln = "def"}'/>

	</declarations>
	<dropdown id="ddTheme" label="Theme" selectedKey='{"default"}' choices='{["default", "light", "dark", "moonlight"]}' keyMap='{v}' textMap='{v}'/>
	<textview label=" "/>
	<dropdown id="dropdown" label="dropdown" choices='{select d.key, d.text from data d}' keyMap='{key}' textMap='{text}'/>
	<segmentcontrol id="segmentcontrol" label="segmentcontrol" choices='{select d.key, d.text from data d}' keyMap='{key}' textMap='{text}' selectedKey='{dropdown.selectedKey}' />
	<textview text='{segmentcontrol.selectedText}' />
	
	<segmentcontrol id="segmentcontrol" label="segmentcontrol" choices='{["Yes", "No"]}' keyMap='{v}' textMap='{v}' />

</form>
  