	</declarations>

	<table record="r" recordset="{[1]}">
		<row>
			<cell>
				<textview text="{longText}"/>
			</cell>
			<cell style="{[styles.cellTop]}">
				<textview text="align: default"/>
			</cell>
			<cell style="{[styles.cellTop]}">
				<textview text="align: top"/>
