<form id="fileuploadForm" 
      menuName="fileupload" 
      title='fileupload' 
      platforms="web ios" 
      xmlns="http://schemas.mobilengine.com/fls/v2">
	<chapter title = "files">
		<repeater id="rgfile" record="f" recordset='{select fs.mediaid, fs.filn, fs.type, fs.dirid from files fs}'>
			<filedownload text="{f.filn}" mediaId="{f.mediaid}" fileName="{f.filn}" />
		</repeater>
	</chapter>
	<fileupload id="filupl" label="upload v18" acceptedMimetypes="application/pdf, application/word, application/excel"/>
	
	<table id="tblPhotoGuid" label="File data:" record="filedata" recordset='{select p.mediaId, p.name, p.type, p.size from filupl.files p}'>
	<header>
	  <row>
		  <cell>
			<textview text='mediaId'/>
		  </cell>          
		  <cell>
			<textview text='name'/>
		  </cell>
		  <cell>
			<textview text='type'/>
		  </cell>		  
		  <cell>
			<textview text='size'/>
		  </cell>
		</row>
	</header>
	<row>
	  <cell width='17 em'>
		<textview text='{filedata.mediaId}' />
	  </cell>
	  <cell width='17 em'>
		<textview text='{filedata.name}'   />
	  </cell>
	  <cell width='17 em'>
		<textview text='{filedata.type}' />
	  </cell>	  
	  <cell width='17 em'>
		<textview text='{toString(filedata.size)}' />
	  </cell>
	</row>
	</table>	
</form>
