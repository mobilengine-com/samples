<form id="clear_now_today_buttons" menuName="Clear, Now and Today Buttons" platforms="web ios" xmlns="http://schemas.mobilengine.com/fls/v2">
    <chapter title="Defaults" />
    <datepicker id="datepicker1" dateFormat="(dtf yyyy&quot;/&quot;MM&quot;/&quot;dd)" />
    <timepicker id="timepicker1" invalidTimeMessage="Not a time" timeFormat="(dtf HH&quot;:&quot;mm)" />

    <chapter title="Custom Labels" />
    <datepicker id="datepicker2" dateFormat="(dtf yyyy&quot;/&quot;MM&quot;/&quot;dd)" clearText="Erase" nowText="Current Date" />
    <timepicker id="timepicker2" timeFormat="(dtf HH&quot;:&quot;mm)" clearText="Erase" nowText="Current Time" />

    <chapter title="No Now/Today Button" />
