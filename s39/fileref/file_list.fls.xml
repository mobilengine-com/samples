<form id="file_list" 
      menuName="file_list" 
      title='file_list' 
      platforms="web ios" 
      xmlns="http://schemas.mobilengine.com/fls/v2">
	
    <table recordset="{SELECT f.fileref, f.filename, f.size, f.checksum FROM files f}" record="r">
        <header>
            <row>
                <cell>
                    <textview label="Name" />
                </cell>
                <cell>
                    <textview label="Size" />
                </cell>
                <cell>
                    <textview label="SHA-1 Checksum" />
                </cell>
                <cell>
                    <textview label="Priority" />
                </cell>
                <cell>
                    <textview label="" />
                </cell>
                <cell>
                    <textview label="" />
                </cell>
            </row>
        </header>
        <row>
            <cell>
                <textview text="{r.filename}" />
            </cell>
            <cell>
                <textview text="{TOSTRING(r.size)}" />
            </cell>
            <cell>
                <textview text="{r.checksum}" />
            </cell>
            <cell>
                <textview text="{TOSTRING(PRIORITY(r.fileref))}" />
            </cell>
            <cell>
                <fileview text='Open' fileref="{r.fileref}" />
            </cell>
            <cell>
                <filedownload text='Download' fileref="{r.fileref}" />
            </cell>
        </row>
    </table>
</form>
