<Form name="a_removeaccents" description="a_removeaccents" typed="true"
	dateformat="(dtf yyyy&quot;-&quot;MM&quot;-&quot;dd&quot; &quot;HH&quot;:&quot;mm&quot;:&quot;ss&quot;.&quot;S)"
	numberformat="{decimalSeparator:&quot;.&quot;}"
	inlineReference="true" sillyNulls="false">
	<Control type="panel" name="root">
		<Control name="in" type="textbox" label="Type some text:" text="árvíztűrő" />
		<Control name="out" type="label" label="Accents removed:" text="{SELECT REMOVEACCENTS(@[../in])}" />
	</Control>
</Form>